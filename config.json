{
	"mnist": {
		"type": "number",
		"processing": "normalized"
	}, 
	"network": {
		"alpha": 0.1,
		"tau": 128,
		"activation": "sigmoid",
		"weights": "xavier_uniform",
		"layers": [32, 32],
		"targets": [1, 8]
	},
	"relaxation": {
		"gamma": 0.1,
		"gamma_rate": 0.5,
		"early_stop": {
			"gamma_count": 2,
			"energy_residual": 1e-9
		}
	},
	"operations": {
		"train": true,
		"test": true
	},
	"training": {
		"num_samples": 10,
		"seed": 0,
		"test_samples": 10,
		"logging": true		
	},
	"testing": {
		"num_samples": 1000,
		"logging": true
	}
}